@page "/alternative-textures"
@layout ContentPacksLayout

@code {
    [CascadingParameter]
    public ContentPacksLayout? Layout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Layout is null)
        {
            // TODO: Log error
            return;
        }

        // Set the title
        Layout.Title = "Alternative Textures";

        // Override the base theme
        Layout.MainLayout!.SetTheme(new FashionSenseTheme());

        // Refresh the content packs
        await Layout.RefreshContentPacks(Path.Combine("resources", "alternative-textures"));
    }
}