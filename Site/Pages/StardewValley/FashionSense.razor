@page "/fashion-sense"
@layout ContentPacksLayout

<style>
    .mud-input-control > .mud-input-control-input-container > .mud-input-label-inputcontrol {
        color: @(Layout.MainLayout.GetCurrentPalette().TextSecondary) !important;
    }
</style>

@code {
    [CascadingParameter]
    public ContentPacksLayout? Layout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Layout is null)
        {
            // TODO: Log error
            return;
        }

        // Set the title
        Layout.Title = "Fashion Sense";

        // Override the base theme
        Layout.MainLayout!.SetTheme(new FashionSenseTheme());

        // Refresh the content packs
        await Layout.RefreshContentPacks(Path.Combine("resources", "fashion-sense"));
    }
}